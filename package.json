{
  "name": "pdf-diff-viewer",
  "version": "1.0.0",
  "license": "ISC",
  "title": "PDF Diff Viewer",
  "scripts": {
    "lint": "tsc",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "pre-deploy": "yarn clean && yarn build-css && yarn lint && yarn build",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "build-css": "postcss tailwind.css -o index.css",
    "build-css-prod": "cross-env NODE_ENV=production postcss tailwind.css -o index.css",
    "watch-css": "postcss tailwind.css -o index.css -w"
  },
  "dependencies": {
    "jimp": "^0.10.3",
    "next": "latest",
    "pdfjs-dist": "^2.3.200",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.6",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-dropzone": "^11.0.1",
    "react-icons": "^3.10.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.0.1",
    "styled-components": "^5.1.0",
    "tailwindcss": "^1.4.1",
    "unistore": "^3.5.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@types/node": "^13.13.4",
    "@types/react-pdf": "^4.0.3",
    "@types/styled-components": "5.0.1",
    "autoprefixer": "^9.7.6",
    "babel-plugin-styled-components": "^1.10.0",
    "cssnano": "^4.1.10",
    "husky": "^4.2.5",
    "next-compose-plugins": "^2.2.0",
    "postcss-cli": "^7.1.1",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn && yarn pre-deploy"
    }
  }
}
